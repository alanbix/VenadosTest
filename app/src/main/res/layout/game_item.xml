<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:rowCount="3"
    android:columnCount="4">

    <!-- Calendar date -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/calendar"
            android:layout_width="@dimen/calendar_logo"
            android:layout_height="@dimen/calendar_logo"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/day_number"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/date"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/day_name"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/date"
            android:layout_gravity="center"/>
    </LinearLayout>


    <!-- Home info -->
    <ImageView
        android:id="@+id/local_image"
        android:layout_width="@dimen/team_shield"
        android:layout_height="@dimen/team_shield"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/local_name"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_width="@dimen/team_shield"
        android:textSize="@dimen/team_name"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:textAlignment="center"/>

    <!-- Score -->
    <TextView
        android:id="@+id/score"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_column="2"
        android:textSize="@dimen/score"
        android:layout_columnWeight="1"
        android:layout_gravity="center"/>

    <!-- Away info -->
    <ImageView
        android:id="@+id/opponent_image"
        android:layout_width="@dimen/team_shield"
        android:layout_height="@dimen/team_shield"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/opponent_name"
        android:layout_row="2"
        android:layout_column="3"
        android:layout_width="@dimen/team_shield"
        android:textSize="@dimen/team_name"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:textAlignment="center"/>

</GridLayout>
